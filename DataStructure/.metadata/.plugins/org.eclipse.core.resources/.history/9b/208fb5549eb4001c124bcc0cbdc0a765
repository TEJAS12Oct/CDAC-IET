package Student;

public class Sort {
	
	public void selectionAscending(Student[] arr) {
		
		for (int t = 0; t < arr.length - 1; t++) {
			int i = t;
			int x = arr[i];
			while (i < arr.length) {
				if (arr[i] < x) {
					int tmp = arr[i];
					arr[i] = x;
					x = tmp;

				}
				i++;
				counter++;
			}
			arr[t] = x;
		}
		System.out.println(counter);
	}
	
	
	public void selectionDecending(Student[] arr) {
		//int counter = 0;
		for (int t = 0; t < arr.length - 1; t++) {
			int i = t;
			int x = arr[i];
			while (i < arr.length) {
				if (arr[i] > x) {
					int tmp = arr[i];
					arr[i] = x;
					x = tmp;

				}
				i++;
				//counter++;
			}
			arr[t] = x;
		}
		//System.out.println(counter);
	}

	
	


}
