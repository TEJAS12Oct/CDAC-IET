package Assignment1;

public class Q2 {

	public static void main(String[] args) {

		int i=0;
		fun(i);
		
	}

	private static void fun(int x) {
		
		//1,2,3,4,5,4,3,2,1
		
		System.out.print(x + ", ");
		
		if(x>5)
		{
			x = x+1;
			fun(x);
		}
		else
		{
			System.out.print(x + ", ");	
		}
		
		System.out.print(x + ", ");
		
	}
	
	
	

}
