package Assignment1;

public class Q3 {

	public static void main(String[] args) {

		int i = 0;
		fun(i);
	}

	private static void fun(int x) {
		if (x < 6) {
			for (int j = 0; j < x; j++) {
				System.out.print("*");
			}
		}
		System.out.println();

		x = x + 1;
		fun(x);
		for (int j = 0; j < x; j++) {
			System.out.print("*");
		}

		System.out.println();
	}

}
