	*
	  
	 */
	private static void fun2(int x) {
		
		if(x<5)
		{
			
			x = x+1;
			fun2(x);
			
			for(int p=0; p<x; p++)
			{
				System.out.print("*");
			}
			System.out.println();
			
		}

	}

