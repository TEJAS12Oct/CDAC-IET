package Assignment1;

public class Q1 {

	public static void main(String[] args) {

		int i=0;
		//fun(i);
		fun2(i);
	}

	private static void fun(int x) {
		
		//1,2,3,4,5,4,3,2,1
		
		//System.out.print(x + ", ");
		
		if(x<5)
		{
			x = x+2;
			fun(x);
		}
		else
		{
			//System.out.print(x + ", ");	
		}
		//RR
		//System.out.print(x + ", ");
		
	}
	
	
	/*
	 
	*****
	****
	***
