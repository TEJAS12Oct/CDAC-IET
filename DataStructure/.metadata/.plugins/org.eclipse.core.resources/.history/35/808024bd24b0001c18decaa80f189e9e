package Assignment1;

public class Q1 {

	public static void main(String[] args) {

		int i=0;
		//fun(i);
		fun2(i);
	}

/*
	 
	*****
	****
	***
	**
	*
	  
*/
	private static void fun2(int x) {
		
		if(x<5)
		{
			
			x = x+1;
			fun2(x);
			
			for(int p=0; p<x; p++)
			{
				System.out.print("*");
			}
			System.out.println();
			
		}

	}

}
