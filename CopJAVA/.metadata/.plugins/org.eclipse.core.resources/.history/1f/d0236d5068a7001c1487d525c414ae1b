package MenuDriven;

import java.util.Scanner;

public class cafe {

	public static void main(String[] args) {

		int ch, num = 0, res;
		Scanner sc = new Scanner(System.in);
		do {

			System.out.println("1.Cold Drinks");
			System.out.println("2.Hot Drinks");
			System.out.println("3.Snack");
			System.out.println("4.Ice  Crem");
			System.out.println("5.Exit");
			System.out.println("Enter your choice (1-5) = ");
			ch = sc.nextInt();
			if (ch == 5)
				return;
			

			switch (ch) {
			case 1: {
				res = Cold_Drinks(num);
				System.out.println("Total Price  of Cold Drinkss " + num);
				break;
			}
			case 2: {
				res = Hot_Drinks(num);
				System.out.println("Total Price  of Hot Drinks " + num);
				break;
			}
			case 3: {
				res = snacks(num);
				System.out.println("Total Price  of Snacks " + num);
				break;
			}
			case 4: {
				res = Iceceram(num);
				System.out.println("Total  of Ice Cream" + num);
				break;
			}

			default: {
				System.out.println("Invalid Choice  Enter Choice (1-5)");
			}

			}

		} while (ch != 5);
		System.out.println("Bye Bye");

	}

	static int Cold_Drinks(int num) {
		int ch;

		Scanner sc = new Scanner(System.in);
		do {

			System.out.println("1.Coke");
			System.out.println("2.Thumbs Up");
			System.out.println("3.Sprite");
			System.out.println("4.Mirinda");
			System.out.println("5.Exit");
			System.out.println("Enter your choice (1-5) = ");
			ch = sc.nextInt();
			if (ch == 5)
				return num;

			switch (ch) {

			case 1: {
				int Coke = 20;
				System.out.println("Price  of Coke " + Coke + "\n");
				System.out.println("Enter Qty Of Coke = ");
				int qty = sc.nextInt();
				int coke = qty * 20;
				System.out.println("coke Bill = " + coke);

				break;
			}
			case 2: {
				int ThumbsUp = 25;
				System.out.println("Price  of Thumbs Up " + ThumbsUp + "\n");
				System.out.println("Enter Qty Of Thumbs up = ");
				int qty = sc.nextInt();
				int thumbsUp = qty * 25;
				System.out.println("Thumbs Up Bill = " + thumbsUp);

				break;

			}
			case 3: {
				int Sprite = 22;
				System.out.println("Price  of Sprite " + Sprite + "\n");
				System.out.println("Enter Qty Of Sprite = ");
				int qty = sc.nextInt();
				int sprite = qty * 22;
				System.out.println("Sprite Bill = " + sprite);

				break;
			}
			case 4: {
				int Mirinda = 15;
				System.out.println("Price  of Mirinda " + Mirinda + "\n");
				System.out.println("Enter Qty Of Mirinda = ");
				int qty = sc.nextInt();
				int mirinda = qty * 25;
				System.out.println("Mirinda Bill = " + mirinda);

				break;
			}
			default: {
				System.out.println("Invalid Choice  Enter Choice (1-5)");
			}

			}

		} while (ch != 5);
		System.out.println("Exit");

		return num;
	}

	static int Hot_Drinks(int num) {
		int ch;

		Scanner sc = new Scanner(System.in);
		do {

			System.out.println("1.Tea");
			System.out.println("2.Coffee");
			System.out.println("3.Soup");
			System.out.println("4.Exit");
			System.out.println("Enter your choice (1-4) = ");
			ch = sc.nextInt();
			if (ch == 4)
				return num;

			switch (ch) {

			case 1: {
				int Tea = 10;
				System.out.println("Price  of Tea " + Tea + "\n");
				System.out.println("Enter Qty Of Tea = ");
				int qty = sc.nextInt();
				int tea = qty * 10;
				System.out.println("Tea Bill = " + tea);

				break;
			}
			case 2: {
				int Coffee = 25;
				System.out.println("Price  of Coffee " + Coffee + "\n");
				System.out.println("Enter Qty Of Coffee = ");
				int qty = sc.nextInt();
				int coffee = qty * 25;
				System.out.println("Coffee Up Bill = " + coffee);

				break;

			}
			case 3: {
				int Soup = 50;
				System.out.println("Price  of Soup " + Soup + "\n");
				System.out.println("Enter Qty Of Soup = ");
				int qty = sc.nextInt();
				int soup = qty * 50;
				System.out.println("Soup Bill = " + soup);

				break;
			}

			default: {
				System.out.println("Invalid Choice  Enter Choice (1-3)");
			}

			}

		} while (ch != 4);
		System.out.println("Exit");

		return num;

	}

	static int snacks(int num) {
		int ch;

		Scanner sc = new Scanner(System.in);
		do {

			System.out.println("1.Samosa");
			System.out.println("2.Kachori");
			System.out.println("3.VadaPav");
			System.out.println("4.Dabeli");
			System.out.println("5.Idali");
			System.out.println("6.Exit");
			System.out.println("Enter your choice (1-6) = ");
			ch = sc.nextInt();
			if (ch == 6)
				return num;

			switch (ch) {

			case 1: {
				int Samosa = 12;
				System.out.println("Price  of Samosa " + Samosa + "\n");
				System.out.println("Enter Qty Of Samosa = ");
				int qty = sc.nextInt();
				int samosa = qty * 12;
				System.out.println("coke Bill = " + samosa);

				break;
			}
			case 2: {
				int Kachori = 15;
				System.out.println("Price  of Kachori " + Kachori + "\n");
				System.out.println("Enter Qty Of Kachori = ");
				int qty = sc.nextInt();
				int kachori = qty * 15;
				System.out.println("Thumbs Up Bill = " + kachori);

				break;

			}
			case 3: {
				int VadaPav = 20;
				System.out.println("Price  of VadaPav " + VadaPav + "\n");
				System.out.println("Enter Qty Of VadaPav = ");
				int qty = sc.nextInt();
				int vadaPav = qty * 20;
				System.out.println("Sprite Bill = " + vadaPav);

				break;
			}
			case 4: {
				int Dabeli = 25;
				System.out.println("Price  of Dabeli " + Dabeli + "\n");
				System.out.println("Enter Qty Of VadaPav = ");
				int qty = sc.nextInt();
				int dabeli = qty * 25;
				System.out.println("Sprite Bill = " + dabeli);

				break;
			}
			case 5: {
				int Idali = 30;
				System.out.println("Price  of Idali " + Idali + "\n");
				System.out.println("Enter Qty Of Idali = ");
				int qty = sc.nextInt();
				int idali = qty * 30;
				System.out.println("Sprite Bill = " + idali);

				break;
			}

			default: {
				System.out.println("Invalid Choice  Enter Choice (1-5)");
			}

			}

		} while (ch != 6);
		System.out.println("Exit");
		return num;
	}

	static int Iceceram(int num) {
		int ch;

		Scanner sc = new Scanner(System.in);
		do {

			System.out.println("1.Chocolate");
			System.out.println("2.Vanila");
			System.out.println("3.Pista");
			System.out.println("4.Mango");
			System.out.println("5.Exit");
			System.out.println("Enter your choice (1-4) = ");
			ch = sc.nextInt();
			if (ch == 5)
				return num;

			switch (ch) {

			case 1: {
				int Chocolate = 30;
				System.out.println("Price  of Chocolate " + Chocolate + "\n");
				System.out.println("Enter Qty Of Chocolate = ");
				int qty = sc.nextInt();
				int chocolate = qty * 12;
				System.out.println("coke Bill = " + chocolate);

				break;
			}
			case 2: {
				int Vanila = 20;
				System.out.println("Price  of Vanila " + Vanila + "\n");
				System.out.println("Enter Qty Of Vanila = ");
				int qty = sc.nextInt();
				int vanila = qty * 15;
				System.out.println("Thumbs Up Bill = " + vanila);

				break;

			}
			case 3: {
				int Pista = 25;
				System.out.println("Price  of Pista " + Pista + "\n");
				System.out.println("Enter Qty Of Pista = ");
				int qty = sc.nextInt();
				int pista = qty * 25;
				System.out.println("Sprite Bill = " + pista);

				break;
			}
			case 4: {
				int Mango = 35;
				System.out.println("Price  of Dabeli " + Mango + "\n");
				System.out.println("Enter Qty Of Mango = ");
				int qty = sc.nextInt();
				int mango = qty * 35;
				System.out.println("Sprite Bill = " + mango);

				break;
			}

			default: {
				System.out.println("Invalid Choice  Enter Choice (1-4)");
			}

			}

		} while (ch != 5);
		System.out.println("Exit");
		return num;
	}

}
