//***************using toString*************

public class Circle {

	int centreX;
	int centreY;
	int radius;

	Circle() {
		centreX = 0;
		centreY = 0;
		radius = 1;

	}

	Circle(int x, int y) {
		centreX = x;
		centreY = y;
		radius = 1;

	}

	Circle(int x, int y, int r) {
		centreX = x;
		centreY = y;
		radius = r;

	}

	public String toString() {
		String str = ("Centre: (" + centreX + "," + centreY + ") Radius :" + radius);
		return str;
	}
}
