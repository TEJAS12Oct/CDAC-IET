package MenuDriven;

import java.util.Scanner;

public class MainEmployee {

	public static void main(String[] args) {

		Scanner sc = new Scanner(System.in);

		Employee[] arr = new Employee[3];

		for (int i = 0; i < arr.length; i++) {
			System.out.println("Enter name: ");
			String name = sc.next();

			System.out.println("Enter id: ");
			int id = sc.nextInt();

			System.out.println("Enter Salary: ");
			int basesalary = sc.nextInt();

			arr[i] = new Employee(id, name, basesalary);
		}
		int choice;
		do {
			System.out.println("Enter choice: ");
			System.out.println("1.Manager: ");
			System.out.println("2.Tester: ");
			System.out.println("3.Developer: ");
			System.out.println("4.Exit: ");

			choice = sc.nextInt();
			switch (choice) {
			case 1:
				Manager(arr);

				break;
			case 2:
				Tester(arr);
				break;
			case 3:
				Developer(arr);
				break;

			}
		} while (choice != 4);
		System.out.println("Bye bye.....");

	}

	private static float Developer(Employee[] arr) {

		if ((getRole().equals("Developer")) || (getRole().equals("developer"))) {
			int baseSalary = 0;
			float totalSalary;
			return (totalSalary = (baseSalary + ((40 / 100) * baseSalary) - (baseSalary / 100.f)));
		}
		return 0;

	}

	private static void Tester(Employee[] arr) {

		getTotalSalary();
	}

	private static void Manager(Employee[] arr) {
		getTotalSalary();
	}

	public static float getTotalSalary() {
		float totalSalary = 0;
		int baseSalary = 0;
		if ((getRole() == ("Manager")) || (getRole() == ("manager"))) {
			return (totalSalary = ((baseSalary) + (((50 * baseSalary) / 100)) - (baseSalary / 4.25f)));
		}
		if ((getRole().equals("Tester")) || (getRole().equals("tester"))) {
			return (totalSalary = (baseSalary + (((45 * baseSalary) / 100)) - (baseSalary / 150.f)));
		}

		if ((getRole().equals("Developer")) || (getRole().equals("developer"))) {
			return (totalSalary = (baseSalary + ((40 / 100) * baseSalary) - (baseSalary / 100.f)));
		}
		return 0;
	}

	private static String getRole() {

		return null;
	}

}
