package ArrayRevision;

import java.util.Scanner;

public class StudentMain {

	public static void main(String[] args) {
		int i;
		Scanner sc = new Scanner(System.in);
		System.out.println("Enter Size = ");
		int size = sc.nextInt();
		// Student[] arr = new Student[size];
		// int[] arr = new int[size];
		Student[] arr = new Student[size];
		Student s = null;
		for (i = 0; i < arr.length; i++) {
			System.out.println("Enter Name = ");
			String name = sc.next();
			System.out.println("Enter Age = ");
			int age = sc.nextInt();
			System.out.println("Enter Marks = ");
			int marks = sc.nextInt();
			// arr[i] = new Student(name, age, marks);
			s = new Student(name, age, marks);

			arr[i] = s;
			// System.out.println(s); // all size getting value one by one
		}
		// System.out.println(s); // only last size getting value

//		for (i = 0; i < arr.length; i++) {
//			System.out.println(arr[i]);
//		}

//		arr[0] = s;
//		//arr[1] = s;

		for (i = 0; i < arr.length; i++) {
			System.out.println("Student Data = " + arr[i]);
		}

//		Student.Display(arr);
//		System.out.println(i);
//		arr[0].print(arr, 0);
//		arr[0].print(arr, 1);

		if (arr[0].getAge() > arr[1].getAge())

		{

			arr[0].print(arr, 0);
		} else {
			arr[1].print(arr, 1);
		}
	}

}
