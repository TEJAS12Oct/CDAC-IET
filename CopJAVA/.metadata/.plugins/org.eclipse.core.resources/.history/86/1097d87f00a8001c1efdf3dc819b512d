package MenuDriven;

import java.util.Scanner;

public class MainEmployee {

	public static void main(String[] args) {

		Scanner sc = new Scanner(System.in);

		Employee[] arr = new Employee[5];

		for (int i = 0; i < arr.length; i++) {
			System.out.println("Enter name: ");
			String name = sc.next();

			System.out.println("Enter Roll: ");
			String roll = sc.next();

			System.out.println("Enter id: ");
			int id = sc.nextInt();

			System.out.println("Enter Salary: ");
			int salary = sc.nextInt();

			arr[i] = new Employee(id, roll, name, salary);
		}
		int choice;
		do {
			System.out.println("Enter choice: ");
			System.out.println("1.Manager: ");
			System.out.println("2.Tester: ");
			System.out.println("3.Developer: ");
			System.out.println("4.Exit: ");

			choice = sc.nextInt();
			switch (choice) {
			case 1:
				Manager(arr);

				break;
			case 2:
				Tester(arr);
				break;
			case 3:
				Developer(arr);
				break;

			}
		} while (choice != 4);
		System.out.println("Bye bye.....");

	}

	private static void Developer(Employee[] arr) {
		float totalSalary = 0;
		if ((getRole().equals("Developer")) || (getRole().equals("developer"))) {
			return (totalSalary = (baseSalary + ((40 / 100) * baseSalary) - (baseSalary / 100.f)));
			getTotalSalary();
		}

	}

	private static void Tester(Employee[] arr) {

	}

	private static void Manager(Employee[] arr) {
		float totalSalary = 0;
		if ((getRole() == ("Manager")) || (getRole() == ("manager"))) {
			return (totalSalary = ((baseSalary) + (((50 * baseSalary) / 100)) - (baseSalary / 4.25f)));
		}

	}
}
